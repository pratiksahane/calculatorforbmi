        font-weight: 600;
        margin-bottom: 15px;
    }

    .bmi-description {
        color: #718096;
        font-size: 14px;
        line-height: 1.5;
    }

    .category-underweight {
        color: #3182ce;
    }

    .category-normal {
        color: #38a169;
    }

    .category-overweight {
        color: #d69e2e;
    }

    .category-obese {
        color: #e53e3e;
