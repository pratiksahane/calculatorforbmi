<div class="container d-flex justify-content-center">
    <div class="calculator-container">
        <div class="form-header">
            <h2><i class="bi bi-activity"></i> BMI Calculator</h2>
            <p>Calculate your Body Mass Index to understand your health status</p>
        </div>

        <form id="bmiForm" method="post" action="ShowData">
            <!-- Height Input -->
            <div class="input-group">
                <label class="form-label">
                    <i class="bi bi-clipboard-pulse"></i>
                    Height
                </label>
                <input type="number"
                       class="form-control m-1"
                       id="height"
                       name="height"
                       placeholder="Enter your height"
                       step="0.01"
                       min="0"
                       required>
                <div class="feet-inches-input" id="feetInchesInput">
                    <input type="number"
                           class="form-control m-1"
                           id="feet"
                           name="feet"
                           placeholder="Feet"
                           min="0"
                           max="8">
                    <input type="number"
                           class="form-control m-1"
                           id="inches"
                           name="inches"
                           placeholder="Inches"
                           min="0"
                           max="11"
                           step="0.1">
                </div>
                <div class="unit-selector">
                    <button type="button" class="unit-btn active" data-unit="cm" onclick="setHeightUnit('cm')">
                        Centimeters (cm)
                    </button>
                    <button type="button" class="unit-btn" data-unit="ft" onclick="setHeightUnit('ft')">
                        Feet & Inches
                    </button>
                </div>
                <input type="hidden" id="heightUnit" name="heightUnit" value="cm">
            </div>

            <!-- Weight Input -->
            <div class="input-group">
                <label class="form-label">
                    <i class="bi bi-speedometer2"></i>
                    Weight
                </label>
                <input type="number"
                       class="form-control m-1"
                       id="weight"
                       name="weight"
                       placeholder="Enter your weight"
                       step="0.1"
                       min="0"
                       required>
                <div class="unit-selector">
                    <button type="button" class="unit-btn active" data-unit="kg" onclick="setWeightUnit('kg')">
                        Kilograms (kg)
                    </button>
                    <button type="button" class="unit-btn" data-unit="lbs" onclick="setWeightUnit('lbs')">
                        Pounds (lbs)
                    </button>
                </div>
                <input type="hidden" id="weightUnit" name="weightUnit" value="kg">
            </div>

            <!-- Age Input -->
            <div class="input-group">
                <label class="form-label">
                    <i class="bi bi-person"></i>
                    Age
                </label>
                <input type="number"
                       class="form-control m-1"
                       id="age"
                       name="age"
                       placeholder="Enter your age"
                       min="1"
                       max="120"
                       required>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="submit-btn">
                <i class="fas fa-calculator me-2"></i>Calculate BMI
            </button>
        </form>

        @* Display results from ViewBag if available *@
        @if (ViewBag.BMI != null)
        {
            <div class="result-container" style="display: block;">
                <div class="bmi-value">@ViewBag.BMI</div>
                <div class="bmi-category @ViewBag.CategoryClass">@ViewBag.Category</div>
                <div class="bmi-description">@ViewBag.Description</div>
            </div>
        }
    </div>
</div>

<script>
    // Function to set height unit
    function setHeightUnit(unit) {
        document.getElementById('heightUnit').value = unit;

        // Update active button styling for height
        document.querySelectorAll('.input-group:first-of-type .unit-btn').forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-unit') === unit) {
                btn.classList.add('active');
            }
        });

        // Show/hide appropriate input fields
        const heightInput = document.getElementById('height');
        const feetInchesInput = document.getElementById('feetInchesInput');

        if (unit === 'ft') {
            heightInput.style.display = 'none';
            feetInchesInput.style.display = 'flex';
            heightInput.removeAttribute('required');
            document.getElementById('feet').setAttribute('required', '');
            document.getElementById('inches').setAttribute('required', '');
        } else {
            heightInput.style.display = 'block';
            feetInchesInput.style.display = 'none';
            heightInput.setAttribute('required', '');
            document.getElementById('feet').removeAttribute('required');
            document.getElementById('inches').removeAttribute('required');
        }

        // Update placeholder text
        if (unit === 'cm') {
            heightInput.placeholder = 'Enter your height in centimeters';
        }
    }

    // Function to set weight unit
    function setWeightUnit(unit) {
        document.getElementById('weightUnit').value = unit;

        // Update active button styling for weight
        document.querySelectorAll('.input-group:nth-of-type(2) .unit-btn').forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-unit') === unit) {
                btn.classList.add('active');
            }
        });

        // Update placeholder text
        const weightInput = document.getElementById('weight');
        if (unit === 'kg') {
            weightInput.placeholder = 'Enter your weight in kilograms';
        } else {
            weightInput.placeholder = 'Enter your weight in pounds';
        }
    }

    // Clear feet/inches when cm is selected and vice versa
    document.getElementById('bmiForm').addEventListener('submit', function(e) {
        const heightUnit = document.getElementById('heightUnit').value;

        if (heightUnit === 'cm') {
            // Clear feet/inches values when using cm
            document.getElementById('feet').value = '';
            document.getElementById('inches').value = '';
        } else {
            // Clear height value when using feet/inches
            document.getElementById('height').value = '';
        }
    });
</script>